<?xml version="1.0" encoding="utf-8"?>
<mod>
    <name>Echoes</name>
    <description>[color=043d01]Echoes[/color] is a mod by MixOnUs &amp; MeepRenzo</description>
    <author>MixOnUs & MeepRenzo</author>
    <version>1.0.0</version>
    <init>
        <include id="lang.xml"/>
        <include id="npc/npc.xml"/>
        <quest id="init_echoes" giver="dem" exp="1000">
            <item id="wood" count="5"/>
        </quest>
        <npc id="dem" extends="dem">
            <operate>
                <section if="getFlag('final_boss_defeat')">
                    <dialogue section="dem" id="final_boss_defeat" speaker="dem"/>
                    <quest id="init_echoes"/>
                </section>
            </operate>
        </npc>
    </init>
</mod>